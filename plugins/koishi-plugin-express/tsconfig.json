{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "strict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "target": "ES2017",
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "exclude": ["**/*.test.tsx", "**/*.test.ts", "**/test.tsx", "**/test.ts", "**/__demo__/**"],
  "include": ["src/**/*.tsx", "src/**/*.ts"]
}
